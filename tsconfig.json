{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "declaration": true,
    "declarationDir": "dist",
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "isolatedModules": true,
    "moduleResolution": "node"
  },
  "include": [
    "src"
  ],
  "exclude": [ "node_modules" ]
}